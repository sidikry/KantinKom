<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_buy"
            android:layout_width="62dp"
            android:layout_marginStart="20dp"
            android:layout_height="65dp"
            android:src="@drawable/ic_buy_makanan" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratbold"
                android:textAllCaps="true"
                android:textColor="@color/white_primary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/penjual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/sourcesansproregular"
                android:textColor="@color/white_primary"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/sourcesansproregular"
                android:textColor="@color/white_primary"
                android:textSize="12sp" />



        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="11dp"
            android:layout_marginLeft="24dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:background="@drawable/btnmines"/>

            <TextView
                android:id="@+id/jumlah_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textSize="18sp"
                android:textColor="@color/black_primary"
                android:fontFamily="@font/montserratregular"/>
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="25dp"
                android:layout_height="28dp"
                android:background="@drawable/btnpls"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>