<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyProfileAct">

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.48"
        android:background="@drawable/bg_overlay_ill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_keyboard_backspace_24px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_notifications_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_amikom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_amikom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="572dp"
        android:alpha="0.48"
        android:background="@drawable/bg_overlay_orange"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_amikom">

    </LinearLayout>


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserratbold"
        android:gravity="center"
        android:text="PROFIL"
        android:layout_marginTop="16dp"
        android:layout_marginStart="48dp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesansproregular"
        android:gravity="center"
        android:layout_marginStart="48dp"
        android:text="Silahkan edit profil anda"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <View
        android:id="@+id/view2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_view_circle_picture_orange"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <com.github.florent37.shapeofview.shapes.CircleView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="17dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView9">

        <ImageView
            android:id="@+id/photo_edit_profile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icon_nopic" />

    </com.github.florent37.shapeofview.shapes.CircleView>

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sourcesansproregular"
        android:gravity="center"
        android:text="Ganti Foto"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <ImageView
        android:id="@+id/btn_add_photo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_edit_24px"
        app:layout_constraintStart_toEndOf="@+id/textView29"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/textView29">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Nama"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/xnama_lengkap"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_input_edit_orange"
            android:fontFamily="@font/montserratmedium"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:paddingLeft="12dp"
            android:textColor="@color/black_primary"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="443dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/montserratmedium"
            android:text="E-mail"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/xemail_address"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_input_edit_orange"
            android:fontFamily="@font/montserratmedium"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:paddingLeft="12dp"
            android:textColor="@color/black_primary"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="443dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Password"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/x_password"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_input_edit_orange"
            android:fontFamily="@font/montserratmedium"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:paddingLeft="12dp"
            android:textColor="@color/black_primary"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="443dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/montserratmedium"
            android:text="Status"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/x_status"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_input_edit_orange"
            android:fontFamily="@font/montserratmedium"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:paddingLeft="12dp"
            android:textColor="@color/black_primary"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="443dp" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="292dp"
        android:alpha="0.2"
        android:src="@drawable/ic_undraw_proud_self_1ddv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout" />

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_btn_orange"
        android:fontFamily="@font/montserratmedium"
        android:text="EDIT PROFILE"
        android:layout_marginTop="16dp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout15" />


</androidx.constraintlayout.widget.ConstraintLayout>